{
  "name": "whatsapp-subscription-bot",
  "version": "1.0.0",
  "description": "WhatsApp subscription management bot with admin dashboard",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "build": "echo 'No build step required for Node.js app'",
    "docker:build": "docker build -t whatsapp-bot .",
    "docker:run": "docker run -p 8080:8080 --env-file .env whatsapp-bot",
    "gcp:deploy": "gcloud run deploy wa-sub-bot --source . --platform managed --region me-central1 --allow-unauthenticated",
    "logs": "gcloud logging read 'resource.type=\"cloud_run_revision\" AND resource.labels.service_name=\"wa-sub-bot\"' --limit 50 --format=\"table(timestamp,textPayload)\"",
    "health": "node -e \"require('http'  ).get('http://localhost:8080/health', (res  ) => { let data = ''; res.on('data', chunk => data += chunk); res.on('end', () => console.log(JSON.parse(data))); }).on('error', console.error)\""
  },
  "keywords": [
    "whatsapp",
    "subscription",
    "bot",
    "node.js",
    "express",
    "firebase",
    "admin-dashboard",
    "payment-gateway"
  ],
  "author": "Ahmed Hell",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "cors": "^2.8.5",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "express-rate-limit": "^6.8.1",
    "express-validator": "^7.0.1",
    "multer": "^1.4.5-lts.1",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "winston": "^3.10.0",
    "winston-daily-rotate-file": "^4.7.1",
    "firebase-admin": "^11.10.1",
    "axios": "^1.4.0",
    "crypto": "^1.0.1",
    "path": "^0.12.7",
    "fs": "^0.0.1-security",
    "dotenv": "^16.3.1",
    "node-cron": "^3.0.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.1",
    "supertest": "^6.3.3",
    "eslint": "^8.45.0",
    "prettier": "^3.0.0",
    "@types/node": "^20.4.5"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "**/*.js",
      "!server.js",
      "!**/node_modules/**"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "rules": {
      "no-unused-vars": "warn",
      "no-console": "off"
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/whatsapp-subscription-bot.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/whatsapp-subscription-bot/issues"
  },
  "homepage": "https://github.com/yourusername/whatsapp-subscription-bot#readme"
}
